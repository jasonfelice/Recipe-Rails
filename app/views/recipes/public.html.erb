<h1 class="text-center mb-5">Public Recipes</h1>
<section class="d-flex flex-column align-items-center">
  <% @public_recipes.each do |recipe| %>
  <%= render partial: 'recipes/public_card', locals: { recipe: recipe }  %>
  <% end %>

  <% if @public_recipes.empty? %>
    <h2 class="text-center">This list is empty</h2>
  <% end %>
</section>